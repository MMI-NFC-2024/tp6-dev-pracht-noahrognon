---
import Layout from "../../../layouts/Layout.astro";
import weather from "../../../assets/weather.json";
import { slugify } from "../../../utils/slug";

const locations = [...new Set(weather.map((item) => item.location))].sort();

const entries = locations.map((location) => {
  const slug = slugify(location);
  const count = weather.filter((item) => item.location === location).length;
  return { location, slug, count };
});
---

<Layout>
  <section class="grid gap-4">
    <h1 class="text-3xl font-semibold text-sky-200">Meteo &ndash; rendu dynamique</h1>
    <p class="max-w-2xl text-sm text-slate-300">
      Les routes dynamiques permettent de consulter l'evolution des temperatures et precipitations par ville.
      Chaque page charge les donnees en direct depuis le fichier JSON.
    </p>
    <ul class="grid gap-3 sm:grid-cols-2">
      {entries.map((entry) => (
        <li class="rounded-2xl border border-slate-800 bg-slate-900/70 p-4 transition hover:border-sky-400">
          <a class="flex flex-col gap-2" href={`/weather/rendu-dynamique/${entry.slug}`}>
            <span class="text-lg font-semibold text-sky-100">{entry.location}</span>
            <span class="text-xs uppercase tracking-wide text-slate-400">{entry.count} relev&eacute;s</span>
          </a>
        </li>
      ))}
    </ul>
  </section>
</Layout>
